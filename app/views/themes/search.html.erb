<div class="theme_wrapper">
  <div class="new_left_bar">
    <div class="top_left_bar">
    <div class="top-left_title">テーマ一覧</div>
    </div>

    <div class="new_theme_form">
      <div class="new_theme"><%= link_to "新規作成", new_theme_path %></div>
    </div>

    <div class="search-main">
      <%= form_with(url: search_themes_path, local: true, method: :get, class: "search-form") do |form| %>
        <%= form.text_field :keyword, placeholder: "テーマを探す", class: "search-input" %>
        <%= form.submit "検索", class: "search-btn" %>
      <% end %>
    </div>

    <div class="left_main_user">
      <div class="left_user_form">
        <div class="search-result">検索結果</div>
        <% @themes.each do |theme| %>
          <div class="left_theme">
            <%= link_to theme.theme_name, theme_messages_path(theme) %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>