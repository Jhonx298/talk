  <div class='chat-room-form'>
  <h1>新規テーマ名</h1>
  <%= form_with model: @theme, local: true do |f| %>
    <div class='chat-room-form__field'>
      <div class='chat-room-form__field-theme'>
        <%= f.label :theme_name, :テーマ名, class: 'chat-room-form__label'%>
        <%= f.text_field :theme_name, class: 'chat__room_name chat-room-form__input', placeholder: '話したいテーマを入力してください'%>
      </div>

      <div class='chat-room-form__field--right'>
        <%= f.label :theme_content, :詳細内容（任意）, class: 'chat-room-form__label'%>
        <%= f.text_area :theme_content, class: 'chat__room_name chat-room-form__text', placeholder: '詳細説明(任意)'%>
      </div>

      <div class='chat-room-form__field--right'>
        <%= f.submit "作成する", class: 'chat-room-form__action-btn'%>
      </div>
    </div>
  <% end %>
  </div>
