<div class='chat-room-form'>
  <h1>新規テーマ名</h1>
  <%=form_with url: "", local: true do |f|%>
    <div class='chat-room-form__field'>
      <div class='chat-room-form__field-theme'>
        <%= f.label :name, :テーマ名, class: 'chat-room-form__label'%>
        <%= f.text_field :name, class: 'chat__room_name chat-room-form__input', placeholder: '話したいテーマを入力してください'%>
      </div>
      <div class='chat-room-form__field--right'>
        <%= f.label :name, :詳細内容, class: 'chat-room-form__label'%>
        <%= f.text_area :name, class: 'chat__room_name chat-room-form__text', placeholder: '詳細説明(任意)'%>
      </div>
      <div class='chat-room-form__field--right'>
        <%= f.submit class: 'chat-room-form__action-btn'%>
      </div>
    </div>
  <% end %>
</div>
